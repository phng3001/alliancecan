Bootstrap: docker
From: python:3.11.5

%labels
    Name python_3.11.5
    Maintainer phng3001
    Description Bundle which contains the Scientific Python stack, including numpy, pandas, matplotlib, scipy and plotly

%post
    # Update the package manager and install dependencies
    apt-get update && apt-get install -y python3-pip

    # Create and activate the virtual environment
    python3 -m venv /env
    . /env/bin/activate

    # Install the required Python packages
    pip install --upgrade pip
    pip install -r /requirements.txt

%files
    requirements.txt /requirements.txt

%environment
    # Activate the virtual environment when the container starts
    . /env/bin/activate

%test
    pip list
